# Frontend Environment Variables
# Copy this file to .env.local for development

# API Configuration
VITE_API_URL=http://localhost:5000/api

# App Configuration
VITE_APP_NAME=WriteHub
VITE_APP_DESCRIPTION=A modern blog platform
VITE_APP_VERSION=1.0.0

# Cloudinary Configuration (if needed)
VITE_CLOUDINARY_CLOUD_NAME=your_cloud_name
VITE_CLOUDINARY_UPLOAD_PRESET=your_upload_preset

# For production, set this to your backend URL:
# VITE_API_URL=https://your-backend-domain.onrender.com/api
# VITE_API_URL=https://your-backend-domain.herokuapp.com/api

# Optional: Add your app name
# VITE_APP_NAME=MegaBlog 